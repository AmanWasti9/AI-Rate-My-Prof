{
  "version": "1",
  "phases": {
    "setup": {
      "commands": [
        "cd backend && pip install -r requirements.txt",
        "cd frontend && npm install"
      ]
    },
    "build": {
      "commands": [
        "cd backend && pip install -r requirements.txt",
        "cd frontend && npm install",
        "cd frontend && npm run build"
      ]
    },
    "start": {
      "commands": [
        "cd backend && python server.py",
        "cd ../frontend && npm start"      ]
    }
  },
  "env": {
    "FLASK_ENV": "production",
    "PORT": "8000"
  },
  "language": {
    "name": "python",
    "version": "3.10"
  },
  "packages": {
    "list": [
      "git",
      "curl"
    ]
  }
}
